extends ../layout

block content
  .row.mt-3
    .col-md-4.col-md-offset-4
      h2  Login
      form.mt-3(action='/user/signin', method='POST')
        .form-group
          label(for='email') Email
          input#email.form-control(type='text', name='email', value=(undefined===user)?'':user.email)
        .form-group
          label(for='password') Password
          input#password.form-control(type='password', name='password', value=(undefined===user)?'':user.password)
        input(name='_csrf', type='hidden', value=csrfToken)
        button.btn.btn-primary(type='submit') Submit